<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="?attr/actionBarSize">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_fragment_multiselect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_fragment_multiselect_image"
        tools:listitem="@layout/row_multiphoto_item"/>

    <Button
        android:id="@+id/btn_fragment_multiselect_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btnChoosePhotosClick"
        android:layout_gravity="bottom"
        android:text="Select Photos" />

</android.support.constraint.ConstraintLayout>