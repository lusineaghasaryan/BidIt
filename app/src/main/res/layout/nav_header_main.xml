<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/page_background"
    android:paddingTop="@dimen/padding_normal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_image_avatar_nav_header"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large"
        android:src="@drawable/account_pic"
        app:border_color="@color/color_text_login_light_grey"
        app:border_width="@dimen/line_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_name_nav_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_small"
        android:textColor="@color/color_text_login_light_grey"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintEnd_toEndOf="@+id/circle_image_avatar_nav_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle_image_avatar_nav_header" />


    <ImageView
        android:id="@+id/hummer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_extra_large"
        android:src="@drawable/hummer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circle_image_avatar_nav_header" />

</android.support.constraint.ConstraintLayout>
