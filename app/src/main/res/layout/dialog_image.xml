<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_large">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager_image_dialog"
            style="@style/show_item_margins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/relative_image_dialog_indicator"
            android:layout_margin="@dimen/margin_small" />

        <RelativeLayout
            android:id="@+id/relative_image_dialog_indicator"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:id="@+id/linear_image_dialog_count_dots"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>