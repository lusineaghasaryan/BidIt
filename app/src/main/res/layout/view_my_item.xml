<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="@dimen/margin_small"
    android:elevation="@dimen/cardview_default_elevation"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/cardview_default_elevation">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/image_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_user_image_my_item_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="8"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/text_start_price_my_item_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:text="500$"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_linear_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="11"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/image_linear_layout">

            <TextView
                android:id="@+id/text_title_view_my_item"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:lines="1"
                android:text="title"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/text_start_date_my_item_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="date"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/text_duration_my_item_view"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="duration"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/follower_count_card_view_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:elevation="@dimen/cardview_default_elevation"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="10dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/favorite_star_border_24dp" />

                <TextView
                    android:id="@+id/text_followers_count_view_my_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="0"
                    android:textSize="20sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>