<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_large">

    <ImageView
        android:id="@+id/image_view_item_add_photo_rv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@android:drawable/ic_menu_gallery"
    />

    <Button
        android:id="@+id/btn_remove_item_add_photo_rv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintTop_toTopOf="@id/image_view_item_add_photo_rv"
        app:layout_constraintRight_toRightOf="@id/image_view_item_add_photo_rv"/>

</android.support.constraint.ConstraintLayout>