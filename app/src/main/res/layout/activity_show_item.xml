<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".activities.ShowItemActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.Design.Light.NoActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax">

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_show_item_activity_horizontal_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />

                <android.support.constraint.Guideline
                    android:id="@+id/guideline_show_item_activity_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.65" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/view_pager_show_item_activity"
                    style="@style/show_item_margins"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#000000"
                    app:layout_constraintBottom_toTopOf="@id/guideline_show_item_activity_horizontal_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_show_item_activity_auction_title"
                    style="@style/show_item_margins"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLength="14"
                    android:text="@string/temp_string"
                    android:textSize="@dimen/text_size_large"
                    app:layout_constraintBottom_toTopOf="@id/txt_show_item_activity_auction_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/guideline_show_item_activity_horizontal_1" />

                <ImageButton
                    android:id="@+id/img_btn_show_item_activity_favorite_btn"
                    style="@style/show_item_margins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/favorite_star_border_48dp"
                    app:layout_constraintBottom_toBottomOf="@id/txt_show_item_activity_auction_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/guideline_show_item_activity_vertical"
                    app:layout_constraintTop_toTopOf="@id/txt_show_item_activity_auction_title" />

                <TextView
                    android:id="@+id/txt_show_item_activity_auction_description"
                    style="@style/show_item_margins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:lines="3"
                    android:maxLines="3"
                    android:text="@string/temp_string"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_auction_title" />

                <TextView
                    android:id="@+id/txt_show_item_activity_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/txt_auction_start_date"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_auction_description" />

                <TextView
                    android:id="@+id/txt_show_item_activity_auction_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/temp_string"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_start_date" />

                <TextView
                    android:id="@+id/txt_show_item_activity_start_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/txt_auction_start_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_auction_start_date" />

                <TextView
                    android:id="@+id/txt_show_item_activity_auction_start_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/temp_string"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_start_price" />

                <TextView
                    android:id="@+id/txt_show_item_activity_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/txt_auction_duration"
                    app:layout_constraintStart_toEndOf="@id/guideline_show_item_activity_vertical"
                    app:layout_constraintTop_toTopOf="@id/txt_show_item_activity_start_date" />

                <TextView
                    android:id="@+id/txt_show_item_activity_auction_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/temp_string"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintStart_toEndOf="@id/guideline_show_item_activity_vertical"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_duration" />

                <TextView
                    android:id="@+id/txt_show_item_activity_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/txt_auction_current_price"
                    app:layout_constraintStart_toEndOf="@id/guideline_show_item_activity_vertical"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_auction_duration" />


                <TextView
                    android:id="@+id/txt_show_item_activity_auction_current_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:text="@string/temp_string"
                    android:textSize="@dimen/text_size_normal"
                    app:layout_constraintStart_toEndOf="@id/guideline_show_item_activity_vertical"
                    app:layout_constraintTop_toBottomOf="@id/txt_show_item_activity_current_price" />

            </android.support.constraint.ConstraintLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/main.toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_show_item_activity_messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_normal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        app:layout_anchor="@id/recycler_view_show_item_activity_messages"
        app:layout_anchorGravity="bottom|right|end">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/input_show_item_activity_message"
            style="@style/show_item_margins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="enter bid price"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/btn_show_item_activity_enter_message"
            style="@style/show_item_margins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
