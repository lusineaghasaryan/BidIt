<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/image_view_item_mutiselect_photo_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_launcher_background" />

    <CheckBox
        android:id="@+id/check_box_item_mutiselect_photo_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/image_view_item_mutiselect_photo_rv"
        android:layout_alignBottom="@+id/image_view_item_mutiselect_photo_rv"/>

</RelativeLayout>