<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_login"
    android:paddingEnd="50dp"
    android:paddingStart="50dp"
    android:paddingTop="200dp"
    tools:context="com.example.user.bidit.activities.LoginActivity">

    <EditText
        android:id="@+id/edit_text_email_login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawablePadding="@dimen/padding_normal"
        android:drawableStart="@drawable/ic_person_outline_black_24dp"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColorHint
            ="#bfbfbf"
        android:textSize="20sp" />

    <View
        android:id="@+id/email_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#bfbfbf"
        app:layout_constraintTop_toBottomOf="@id/edit_text_email_login_activity" />

    <EditText
        android:id="@+id/edit_text_password_login_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00000000"
        android:drawablePadding="@dimen/padding_normal"
        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColorHint="#bfbfbf"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/email_line" />

    <View
        android:id="@+id/password_line"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#bfbfbf"
        app:layout_constraintTop_toBottomOf="@id/edit_text_password_login_activity" />

    <Button
        android:id="@+id/btn_log_in_login_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button"
        android:text="@string/text_login"
        android:textColor="#bfbfbf"
        android:textSize="@dimen/recycler_view_item_text_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_line" />

    <Button
        android:id="@+id/btn_registration_login_activity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/reg_button"
        android:text="@string/text_registration"
        android:textColor="#bfbfbf"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/recycler_view_item_text_size_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_log_in_login_activity" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_facebook_login_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>
